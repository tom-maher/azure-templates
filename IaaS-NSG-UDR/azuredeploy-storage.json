{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "stdStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ]
    },
    "prmStorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Premium_GRS",
        "Premium_ZRS"
      ]
    }
  },
  "variables": {
    "stdStorageName": "[concat('ukspocssa', uniqueString(resourceGroup().id))]",
    "prmStorageName": "[concat('ukspocssa', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "name": "[variables('stdStorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "Storage Account - Simple"
      },
      "properties": {
        "accountType": "[parameters('stdStorageType')]"
      }
    },
    {
      "name": "[variables('prmStorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "Storage Account - Premium"
      },
      "properties": {
        "accountType": "[parameters('prmStorageType')]"
      }
    }
  ]
}
